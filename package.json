{
  "name": "carbonusd",
  "version": "1.0.0",
  "description": "smart contracts to convert from USD fiat to Carbon 1:1 while guaranteeing regulatory compliance",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "compile": "truffle compile",
    "test": "truffle test",
    "test-carbon-dollar": "truffle test ./test/tokens/carbonToken/CarbonDollar.test.js",
    "test-permissioned-token": "truffle test ./test/tokens/permissionedToken/PermissionedToken.test.js",
    "test-mutable-token": "truffle test ./test/tokens/permissionedToken/MutablePermissionedToken.test.js",
    "test-regulator-storage": "truffle test ./test/regulator/PermissionsStorage.test.js ./test/regulator/ValidatorStorage.test.js",
    "test-regulator": "truffle test ./test/regulator/Regulator.test.js",
    "test-regulator-proxy": "truffle test ./test/regulator/RegulatorProxy.test.js",
    "test-modular-erc20": "truffle test ./test/modularERC20/AllowanceSheet.test.js ./test/modularERC20/BalanceSheet.test.js",
    "migrate": "truffle migrate",
    "lint": "solium -d contracts --fix",
    "coverage": "solidity-coverage",
    "testrpc": "ganache-cli -a 10 -i development -l 100000000"
  },
  "author": "npai",
  "license": "ISC",
  "dependencies": {
    "@digix/doxity": "^0.5.2",
    "dotenv": "^6.0.0",
    "openzeppelin-solidity": "^1.10.0",
    "truffle": "^4.1.12",
    "web3": "^1.0.0-beta.34",
    "zos": "^1.0.0",
    "zos-lib": "^1.3.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^2.0.2",
    "eth-gas-reporter": "^0.1.10",
    "ethereumjs-abi": "^0.6.5",
    "ganache-cli": "^6.1.3",
    "solidity-coverage": "^0.5.4",
    "solium": "^1.1.7"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stablecarbon/fiat_gateway.git"
  },
  "bugs": {
    "url": "https://github.com/stablecarbon/fiat_gateway/issues"
  },
  "homepage": "https://github.com/stablecarbon/fiat_gateway#readme"
}
